{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./server",
      "paths": {
          "Api/*": ["routes/api/*"],
          "Socket/*": ["routes/sockets/*"],
          "Library": ["library/*"],
          "Modules/*": ["modules/*"],
          "Types/*": ["types/*"],
          "Schemas/*": ["schemas/*"],
          "App/*": ["*"]
      }
  },
  "include": [
      "server/**/*.ts"
  ],
  "exclude": [
      "public",
      "node_modules"
  ]
}