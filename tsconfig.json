{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./server",
      "paths": {
          "@api/*": ["routes/api/*"],
          "@socket/*": ["routes/sockets/*"],
          "@library": ["library/*"],
          "@modules/*": ["modules/*"],
          "@types/*": ["types/*"],
          "@schemas/*": ["schemas/*"],
          "@app/*": ["*"]
      }
  },
  "include": [
      "server/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}